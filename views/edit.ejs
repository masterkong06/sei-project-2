<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/head.ejs') %>
    <title>Edit Page</title>
</head>

<body>
    <%- include ('./partials/jumbotron.ejs') %>
    <div class="container">
        <h1 class="card-title">Edit Item</h1>
        <div id="new-item-form" class="card-body col-8">
            <form class="form-inline" action="/" method="post">
                <div class="col">
                    <div class="form-group">
                        <label for="name">Name: </label>
                        <input class="form-control" type="text" name="name" id="name" value="<%=data.name %>"/>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="name">Description: </label>
                        <input class="form-control" type="text" name="description" id="description" value="<%=data.description %>" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="price">Purchase Price: </label>
                        <input class="form-control" type="text" name="price" id="price" value="<%=data.price %>" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="category">Category: </label>
                        <input class="form-control" type="text" name="category" id="category" value="<%=data.category %>" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="make">Make: </label>
                        <input class="form-control" type="text" name="make" id="make" value="<%=data.make %>" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="model">Model: </label>
                        <input class="form-control" type="text" name="model" id="model" value="<%=data.model %>"/>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="item_id">Barcode/Serial Number: </label>
                        <input class="form-control" type="text" name="item_id" id="item_id" value="<%=data.item_id %>"/>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="location">Location: </label>
                        <input class="form-control" type="text" name="location" id="location" value="<%=data.location %>" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="units">Units: </label>
                        <input class="form-control" type="text" name="units" id="units" value="<%=data.units %>" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="form-check-label" for="insured">Insured:</label>
                        <input class="form-check-input" type="checkbox" name="insured" id="insured"
                        <% if (data.insured === true) { %>
                            checked                         
                        <% } %>
                        />
                    </div>
                </div>
            <div class="btn-new-form">
                <div class="form-group">
                    <input class="form-control show-btn link-btn" type="submit" value="Save" id="save" />
                    <button class="show-btn link-btn"><a href="/">Cancel</a></button>
                </div>
            </div>
        </form>
        </div>
    </div>
</body>


</html>